<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.vasu.aismap.MapsActivity"
    android:id="@+id/rlMaps">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/myLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="25sp"
        android:background="@drawable/location_button"
        android:padding="10sp"
        android:src="@drawable/ic_my_location_black_24dp" />

    <ImageButton
        android:id="@+id/findNearest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignStart="@+id/myLocation"
        android:layout_marginBottom="100sp"
        android:background="@drawable/location_button"
        android:padding="10sp"
        android:src="@drawable/ic_my_location_black_24dp"
        android:layout_alignLeft="@+id/myLocation" />

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_marginBottom="25sp"
        android:layout_toStartOf="@+id/myLocation"
        android:background="@drawable/location_button"
        android:padding="10sp"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_toLeftOf="@+id/myLocation" />

    <com.rey.material.widget.ProgressView
        android:id="@+id/progressData"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="-60dp"
        app:pv_autostart="true"
        app:pv_circular="false"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/Material.Drawable.LinearProgress" />

    <LinearLayout
        android:id="@+id/includeBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:background="@color/white"
        android:elevation="20sp"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10sp"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/geo_autocomplete"
                android:layout_width="wrap_content"
                android:layout_height="35sp"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_weight="0.8"
                android:background="@drawable/search_bar"
                android:dropDownWidth="fill_parent"
                android:gravity="center_vertical"
                android:hint="Search"
                android:imeOptions="flagNoExtractUi|actionSearch"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:textSize="15sp"
                tools:text="dsvdsvds"
                android:ellipsize="end"/>

            <ImageButton
                android:id="@+id/search_close"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="#ffffff"
               map:srcCompat="@drawable/ic_close_black_24dp" />

            <ImageButton
                android:id="@+id/search_more"
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:background="#ffffff"
                map:srcCompat="@drawable/ic_more_black_24dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlNearMachines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:text="Machines Near You"
                android:textSize="15sp" />

            <GridView
                android:id="@+id/gvNearMachines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:gravity="center_horizontal"
                android:numColumns="4"
                android:stretchMode="columnWidth"
                android:verticalSpacing="15sp">

            </GridView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:padding="10sp"
                android:text="Search History"
                android:textSize="15sp" />

            <ListView
                android:id="@+id/lvHistory"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:dividerHeight="-5dp">

            </ListView>

        </RelativeLayout>

    </LinearLayout>

    <include
        android:id="@+id/includeBarBasicInfo"
        layout="@layout/basic_machine_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />


</RelativeLayout>