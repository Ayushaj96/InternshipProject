<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.santalu.diagonalimageview.DiagonalImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        app:di_borderColor="#FF5722"
        app:di_borderEnabled="false"
        app:di_direction="bottom"
        app:di_overlap="56dp"
        app:di_position="bottom"
        android:src="@drawable/machine_info_background">
    </com.santalu.diagonalimageview.DiagonalImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="57dp"
        android:elevation="15sp"
        android:src="@color/blue"
        app:civ_border_color="#ffffff"
        app:civ_border_width="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Machine S.no"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:textColor="#eff6f9"
        android:id="@+id/textView4"
        android:layout_marginTop="60dp"
        android:layout_toRightOf="@+id/profile_image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Machine Address"
        android:textSize="15sp"
        android:textColor="#eff6f9"
        android:layout_below="@id/textView4"
        android:layout_toRightOf="@+id/profile_image" />

        </RelativeLayout>





    <LinearLayout
        android:id="@+id/line"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="20dp"
        android:background="#d3d1d4"
        android:orientation="vertical">

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Machine Info"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="15sp"
            android:src="@drawable/ic_shopping_cart"
             android:layout_marginLeft="60dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll1"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/dot1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_dot"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Machine Status"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"

            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Active"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ll2"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_dot2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Machine Access"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="public"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ll3"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_dot3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Company"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Whisper"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="stayfree"
                android:textSize="15sp"
                android:layout_marginLeft="12dp"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>