<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1sp"
        android:background="@color/white"
        android:elevation="15sp"
        app:cardCornerRadius="1sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingLeft="15sp">

                    <TextView
                        android:id="@+id/machineSerialText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="5sp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="Machine ABC" />

                    <TextView
                        android:id="@+id/machineAddressText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="5sp"
                        android:layout_marginBottom="5sp"
                        tools:text="Rohini Sector 16" />

                </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                android:padding="10sp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnMoreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="   More Info"
                    android:drawableLeft="@drawable/ic_info_outline"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/gray_dark"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/directions"
                    android:layout_height="40sp"
                    android:layout_width="wrap_content"
                    fbutton:buttonColor="@color/blue_light"
                    fbutton:shadowColor="@color/blue_dark"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="5dp"
                    fbutton:cornerRadius="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15sp"
                    android:text="   Directions"
                    android:textColor="@color/white"
                    android:paddingLeft="10sp"
                    android:paddingRight="10sp"
                    android:drawableLeft="@drawable/ic_directions"
                    android:layout_marginTop="5sp"/>

            </RelativeLayout>

            </LinearLayout>


    </android.support.v7.widget.CardView>




</LinearLayout>