<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vasu.aismap.ProfileActivity"
    android:paddingTop="25dp"
    android:gravity="center_horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@color/blue"
        app:civ_border_width="5dp"
        app:civ_border_color="#ffffff"
        android:elevation="15sp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardBasicDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="50dp"
        app:contentPaddingTop="50dp"
        app:contentPaddingBottom="25dp"
        app:cardElevation="10sp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_horizontal"
           android:orientation="vertical">

           <TextView
               android:id="@+id/tvName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5sp"
               android:padding="5sp"
               android:text="Name"
               android:gravity="center_horizontal"
               android:textSize="18sp"
               android:textColor="@color/black"
               android:textStyle="bold"
               android:maxLines="1"
               android:ellipsize="end"/>

           <TextView
               android:id="@+id/tvUsername"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5sp"
               android:text="Username"
               android:gravity="center_horizontal"
               android:maxLines="1"
               android:ellipsize="end"/>

           <TextView
               android:id="@+id/tvEmail"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5sp"
               android:text="Email"
               android:gravity="center_horizontal"
               android:maxLines="2"
               android:ellipsize="end"/>

           <TextView
               android:id="@+id/tvMobile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5sp"
               android:text="Mobile"
               android:gravity="center_horizontal"
               android:maxLines="1"
               android:ellipsize="end"/>

           <TextView
               android:id="@+id/tvDob"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5sp"
               android:text="DOB"
               android:gravity="center_horizontal"
               android:maxLines="1"
               android:ellipsize="end"/>

           <TextView
               android:id="@+id/tvProfession"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="5sp"
               android:text="Profession"
               android:gravity="center_horizontal"
               android:maxLines="1"
               android:ellipsize="end"/>

       </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardPurchaseHistory"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/cardBasicDetails">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:padding="5sp"
                android:text="Purchase History"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
