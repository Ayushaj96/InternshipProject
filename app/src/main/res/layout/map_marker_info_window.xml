<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:id="@+id/rlWindow">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_margin="10sp"
        app:cardCornerRadius="10sp"
        app:cardElevation="10sp">

        <LinearLayout
            android:id="@+id/llGetDirections"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivAvailibility"
                android:layout_width="match_parent"
                android:layout_height="15sp"
                android:background="@color/red" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5sp">

                <ImageView
                    android:id="@+id/imageViewMachine"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-10sp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_toEndOf="@+id/imageViewMachine"
                    android:layout_toRightOf="@+id/imageViewMachine"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPlace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Place"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvAccess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPlace"
                        android:layout_marginTop="5sp"
                        android:text="Public" />

                    <TextView
                        android:id="@+id/GetDirections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10sp"
                        android:text="Directions"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>